/* pages/index/index.wxss */
.show-content {
	color: #2f2f2f;
	word-break: break-word;
	font-size: 14px;
	font-weight: 400;
	line-height: 1.7;
	padding:8px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.show-content h2 {
	font-size: 24px;
	margin: 0 0 15px;
	font-weight: 700;
	color: #2f2f2f;
	line-height: 1.7;
	text-rendering: optimizelegibility;
}
