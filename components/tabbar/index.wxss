.footerBar{
	position: fixed;
	right: 0;
	bottom: 0;
	left: 0;
	height: 50px;
	background:#eee;	
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.footerBar .fb_inner{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	flex:1;
}
.fb_inner text{
	color:#333;
}
.fb_inner .fb_icon{
	font-size: 40rpx;
}
.fb_inner .fb_txt{
	font-size: 24rpx;
}
.fb_inner.active text{
	color: #d22222;
}